<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:alpha="0.4"
            android:background="@color/lib_black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/shape_solid_white_6_r"
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <TextView
                android:id="@+id/tv_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff333333"
                android:textSize="18sp"
                />
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="40dp"
                    android:id="@+id/tv_cancel"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/shape_solid_white_stroke_blue_6"
                    android:elevation="5dp"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="@string/cancel"
                    android:textColor="#ff333333"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/tv_confirm"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/shape_solid_blue_6_r"
                    android:elevation="5dp"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="@string/confirm"
                    android:textColor="@color/lib_white"
                    android:textSize="18sp"
                    />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
