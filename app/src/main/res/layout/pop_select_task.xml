<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:alpha="0.4"
            android:background="@color/lib_black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/shape_solid_white_6_r"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_title"
                android:textColor="@color/lib_black"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:text="选择班次"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/tv_confirm"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/lib_white"
                android:text="@string/confirm"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:background="@drawable/shape_solid_blue_6_r"
                android:layout_width="match_parent"
                android:layout_height="46dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_task"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/tv_confirm"
                android:layout_below="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
