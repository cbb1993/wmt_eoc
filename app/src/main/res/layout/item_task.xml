<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="87dp"
    android:background="@color/lib_white">

    <RelativeLayout
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_centerHorizontal="true"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#EEEEEE" />

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/iv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_solid_white_6_r"
            android:elevation="5dp">

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="已巡"
                android:textColor="#ff505465"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="1"
                android:textColor="#ffd2e9ff"
                android:textSize="35sp"
                android:visibility="gone" />

            <View
                android:id="@+id/view_line"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="62dp"
                android:background="#ff1b82d1"
                android:visibility="gone" />

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="right"
                    android:id="@+id/tv_point_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#ff007efb"
                    android:textSize="20sp" />

                <TextView
                    android:layout_gravity="right"
                    android:id="@+id/tv_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxWidth="300dp"
                    android:singleLine="true"
                    android:textColor="#666"
                    android:textSize="13sp" />
            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>
