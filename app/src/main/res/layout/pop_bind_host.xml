<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:visibility="gone"
            android:id="@+id/view_bg"
            android:alpha="0.4"
            android:background="@color/lib_black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="200dp"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:background="@color/lib_white"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <RelativeLayout
                android:background="@drawable/shape_solid_white_6_r"
                android:layout_width="match_parent"
                android:layout_height="159.5dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="bottom"
                    android:paddingTop="10dp"
                    android:layout_centerVertical="true"
                    style="@style/CustomAppTheme_TextInputLayout">

                    <EditText
                        android:hint="host"
                        android:inputType="text"
                        android:id="@+id/et_host"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/lib_normal" />
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>
            <View
                android:background="@color/lib_grey"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/tv_cancel"
                    android:text="取消"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/tv_confirm"
                    android:textColor="@color/main"
                    android:text="确定"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
