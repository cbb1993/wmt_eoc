<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/lib_white">
    <com.cbb.baselib.view.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        title:left_img_visible="true"
        title:title_text="填写理由"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#fff5f5f5" />

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_solid_fafafa_6_r"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <EditText
            android:background="@color/lib_transparent"
            android:textColor="@color/lib_normal"
            android:textSize="15sp"
            android:maxLength="500"
            android:id="@+id/et_content"
            android:padding="10dp"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="0/500"
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_submit"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/lib_white"
        android:text="@string/submit"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="160dp"
        android:layout_below="@+id/rl_2"
        android:background="@drawable/shape_solid_blue_6_r"
        android:layout_width="match_parent"
        android:layout_height="46dp"/>
</LinearLayout>
