<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/lib_white">
    <com.cbb.baselib.view.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        title:left_img_visible="true"
        title:title_text="选择任务"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#fff5f5f5" />
    <com.google.android.material.tabs.TabLayout
        android:background="@color/lib_white"
        android:id="@+id/tab_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        title:tabTextColor="@color/lib_normal"
        title:tabSelectedTextColor="@color/main"
        title:tabMode="scrollable"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#fff5f5f5" />
   <RelativeLayout
       android:background="@color/lib_white"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/recycler_task"
           android:layout_marginBottom="30dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>

       <Button
           android:id="@+id/btn_confirm"
           android:layout_marginBottom="80dp"
           android:layout_alignParentBottom="true"
           android:textSize="18sp"
           android:gravity="center"
           android:textColor="@color/lib_white"
           android:text="@string/confirm"
           android:layout_marginEnd="20dp"
           android:layout_marginStart="20dp"
           android:background="@drawable/shape_solid_blue_6_r"
           android:layout_width="match_parent"
           android:layout_height="46dp"/>
   </RelativeLayout>



</LinearLayout>
